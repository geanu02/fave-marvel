{% extends "base.jinja" %}

{% block content %}
<div class="form_container">
    <form action="" method="POST" novalidate class="form_signupin">

        <h2>Register at Marvel Favorites</h2>
        {{ form.hidden_tag() }}
        <br>
        <br>
        <p>
            {{ form.email(size=32,placeholder='Email Address') }}
            {% for error in form.email.errors %}
                <span class="error_msg">{{ error }}</span>
            {% endfor %}
        </p>
        <p>
            {{ form.first_name(size=32,placeholder='First Name') }}
            {% for error in form.last_name.errors %}
                <span class="error_msg">{{ error }}</span>
            {% endfor %}
        </p>
        <p>
            {{ form.last_name(size=32,placeholder='Last Name') }}
            {% for error in form.last_name.errors %}
                <span class="error_msg">{{ error }}</span>
            {% endfor %}
        </p>
        <p>
            {{ form.username(size=32,placeholder='Username') }}
            {% for error in form.username.errors %}
                <span class="error_msg">{{ error }}</span>
            {% endfor %}
        </p>
        <p>
            {{ form.password(size=32,placeholder='Password') }}
            {% for error in form.password.errors %}
                <span class="error_msg">{{ error }}</span>
            {% endfor %}
        </p>
        <br>
        <br>
        <p>{{ form.submit() }}</p>

    </form>
</div>

{% endblock %}